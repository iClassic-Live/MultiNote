/* JustNote/JustNote/JustNote.wxss */

/* 视口 */
page {
   height: 100%;
   width: 100%;
}
#wrapper {
  width: 100%;
  height: 100%;
}

/* 防误触蒙层 */
  .mask {
    position: absolute;
    width: 100%;
    z-index: 999;
  }
  .buttomMask {
    bottom: 0;
  }

/* 记事创建区 */


  /* 标题区与记事区 */
    .title-text {
      height: 71.8%;
      width: 100%;
      background-image: url('https://github.com/iClassic-Live/EasyNote/blob/master/images/background-image.jpg?raw=true'); 
      background-size: 100% 100%;
    }

    /* 标题区 */
    .title-text .titleZone .title {
      border-bottom: 3px solid black; 
      width: 98%;
      height: 5%;
      padding: 0 1%;
    }
    /* 文本记事区 */
    .title-text .textZone {
      height: 100%;
      width: 100%;      
    }
    .title-text .textZone .text {
      width: 98%;
      height: 92.6%;
      padding: 0 1%;
      border-bottom: 3px solid black;
    }

  /* 语音记事区 */
    .recordZone {
      height: 7%;
    }
    .record {
      width: 100%;
    }

  /* 拍摄记事和闹钟设置公用组件 */
    swiper {
      height: 100%;
    }
    swiper-item {
      height: 100%;
    }

  /* 拍摄记事区 */
    .cameraZone {
      height: 7%;
    }
    .setCamera {
      text-align: center;
      width: 100%;
    }
    .cameraZone .videoPreview {
      position: absolute;
      width: 100%;
      height: 100%;
      background-color: black;    
    }
  
  /* 闹铃创建区 */
    .alarmZone {
      height: 7%;
    }
    .setAlarm {
      text-align: center;
      width: 100%;
    }

  /* 记事保存区 */
    .saveZone {
      position: absolute;
      display: flex;
      flex-direction: row;
      width: 100%;
      height: 7%;
      bottom: 0;
    } 
    .saveSet {
      width: 100%;
      height: 100%;
    }

/* 组件区 */
  /* 拍摄记事相机组件 */
    #cameraFn {
      height: 100%;
      width: 100%;
      background-color: grey;     
    }
    picker-view {
      height: 8%;
      line-height: 150%;
      text-align: center;
    }
    picker-view-column {
      border: 3rpx solid black;
    }
    .indicator {
      border: 1px solid black;
    }
    camera {
      height: 82.5%;
    }
    .set {
      font-weight: bolder;
      font-size: 40rpx;
      border: 2px solid black;
    }
    .check {
      display: none;
      width: 100%;
      height: 100%;
      text-align: center;
    }
  /* 录像记事预览组件  */
    #videoFn {
      position: absolute;
      z-index: 999;
      width: 100%;
      height: 100%;
    }
    video {
      width: 100%;
      height: 100%;
    }
