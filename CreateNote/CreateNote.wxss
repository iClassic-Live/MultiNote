/* 写记事页 */

/* 视口 */
page {
   height: 100%;
   width: 100%;
}

#background {
  position: absolute;
  height: 78.8%;
  width: 100%;
}
#background image {
  height: 100%;
  width: 100%;
}

#mainFn {
  position: absolute;
  width: 100%;
  height: 100%;
}

/* 防误触蒙层 */
  .mask {
    position: absolute;
    width: 100%;
    z-index: 999;
  }
  .buttomMask {
    bottom: 0;
  }

/* 记事创建区 */


  /* 标题区与记事区 */
    .title-text {
      height: 78.8%;
      width: 100%;
    }
    .title-text .background {
      position: absolute;
      height: 100%;
      width: 100%;
    }
    .title-text .background image {
      height: 100%;
      width: 100%;
    }

    /* 标题区 */
    .title-text .titleZone .title {
      border-bottom: 3px solid #f40; 
      width: 98%;
      height: 5%;
      padding: 0 1%;
    }
    /* 文本记事区 */
    .title-text .textZone {
      height: 100%;
      width: 100%;      
    }
    .title-text .textZone .text {
      width: 98%;
      height: 93.4%;
      padding: 0 1%;
      border-bottom: 3px solid #f40;
    }

  /* 语音记事区 */
    .recordZone {
      height: 7%;
    }
    .record {
      width: 100%;
      background-color: #F5F5DC;
    }


  /* 拍摄记事区 */
    .cameraZone {
      height: 7%;
    }
    .setCamera {
      width: 100%;
      background-color: #F5F5DC;      
    }
    swiper {
      height: 100%;
    }
    swiper-item {
      height: 100%;     
    }
    .cameraFnChoice {
      height: 100%;
      background-color: #F5F5DC;
    }
  


  /* 记事保存/取消区 */
    .save_cancelZone {
      position: absolute;
      display: flex;
      flex-direction: row;
      width: 100%;
      height: 7%;
      bottom: 0;
    } 
    .save_cancel {
      width: 100%;
      height: 100%;
      background-color: #F5F5DC;
    }

/* 组件区 */
  /* 拍摄记事相机组件 */
    #cameraFn {
      height: 100%;
      width: 100%;
      background-color: #336699;     
    }
    picker-view {
      height: 8%;
      line-height: 150%;
      text-align: center;
    }
    picker-view-column {
      border: 3rpx solid black;
    }
    .selection {
      border: 3rpx solid black;
    }
    .indicator {
      border: 3rpx solid black; 
    }
    camera {
      height: 82.5%;
    }
    .set {
      font-weight: bolder;
      font-size: 40rpx;
      border: 6rpx solid #003366;
      background-color: #EEE8AA;
    }
  /* 录像记事预览组件  */
    #videoFn {
      position: absolute;
      z-index: 999;
      width: 100%;
      height: 100%;
    }
    video {
      width: 100%;
      height: 100%;
    }
