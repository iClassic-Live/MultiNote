/* 启动页 */
page {
   height: 100%;
   width: 100%;
}

#background {
  position: absolute;
  height: 100%;
  width: 100%;
}
#background image {
  height: 100%;
  width: 100%;
}

#mainFn {
  position: absolute;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo button {
  font-weight: bolder;
  border: 4.5rpx solid #f40;
  border-radius: 25rpx;
  background-color: #6666ff;  
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 6rpx solid #33BB99;
  background-color: #B0C4DE;
}

.userinfo-nickname {
  font-weight: bolder;
  color: #000;
}

.usermotto {
  margin-top: 100px;
  font-size: 60rpx;
  font-weight: bolder;
  color: #FF0000;
}

.skip {
  position: absolute;
  margin-top: 45%;
} 

.skip .toNote {
  height: 100rpx;
  width: 250rpx;
  line-height: 100rpx;
  font-weight: bolder;
  border: 4.5rpx solid #f40;
  background-color: #9932CC;
}

.instruction {
  position: absolute;
  height: 100%;
  width: 100%;
}
.instruction swiper {
  height: 100%;
  width: 100%;
}
.instruction swiper swiper-item {
  height: 100%;
  width: 100%;
}
.instruction swiper swiper-item image {
  height: 100%;
  width: 100%;
}