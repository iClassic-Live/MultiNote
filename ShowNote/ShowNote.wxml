
<scroll-view id="background">
  <swiper current="{{current}}" circular="true" duration="{{duration}}">
    <swiper-item wx:for="{{bgiQueue}}" wx:for-item="item" wx:key="bgiQueue">
      <image mode="aspectFill" src="{{item}}"></image>
    </swiper-item>
  </swiper>
</scroll-view>

<scroll-view id="mainFn" wx:if="{{mainFnDisplay}}">

  <view class="upperMask" style="height:{{upperMaskHeight}}%"></view>
  <view class="bottomMask" style="height:{{bottomMaskHeight}}%"></view>

  <view class="searchZone common" style="background-color:{{bgc}}">
    <view class="search">
      <input type="text" placeholder="{{searchNote}}" focus="{{canISearch}}" bindfocus="searchNote" bindblur="searchNote" bindinput="searchNote" value="{{resultKey}}"></input>
    </view>
    <view class="result" style="margin-top:{{mgt + 6}}rpx;">
      <view class="showResult" wx:for="{{result}}" wx:for-item="item" wx:key="{{item.style.timeStamp}}">
        <input id="result_{{item.id}}" disabled="true" value="{{item.note.title}}" bindtap="gotoResult"></input>
      </view>
    </view>
  </view>

  <scroll-view class="readingZone common" style="margin-top:{{mgt + 3}}rpx;" bindtouchmove="changeBackgroundImage" bindtouchend="tapEnd">
    <view class="note" id="{{item.id}}" wx:for="{{note}}" wx:for-item="item" wx:key="{{item}}" wx:if="{{noteDisplay}}" style="opacity:{{item.style.opacity}};background-color:{{item.style.bgc}}"
bindtouchend="tapEnd" bindtouchmove="tapMove" bindtap="cancel_editNote">
      <input class="title" disabled="true" value="{{item.note.title}}" style="opacity:{{item.style.opacity}};font-weight:{{item.style.fontWeight}};color:{{item.style.fontColor}}"></input>
      <view class="menu" style="left:{{item.style.pullOutMenu}}rpx">
        <image id="text_{{item.id}}" src="../images/text.png" catchtap="readText"></image>
        <image id="record_{{item.id}}"  src="../images/voice.png" catchtap="listenRecord"></image>
        <image id="camera_{{item.id}}"  src="../images/camera.png" catchtap="seePhoto"></image>
        <image id="shoot_{{item.id}}" src="../images/VCR.png" catchtap="watchVideo"></image>
      </view>
      <view class="delete" style="right:{{item.style.pullOutDelete}}rpx">
        <view id="deleteNote_{{item.id}}" class="deleteNote" catchtap="deleteNote">删除</view>
      </view>
    </view>
    <view class="text" wx:if="{{textDisplay}}" bindtouchmove="jumpToAnother">
      <textarea disabled="true" style="font-size:{{fontSize}};font-weight:{{fontWeight}};color:{{fontColor}}" value="{{text}}" bindtouchstart="tapStart" bindtouchend="tapEnd" bindtap="textCheck"></textarea>
    </view>
    <view class="record" wx:if="{{recordDisplay}}" bindtouchstart="tapStart" bindtouchend="tapEnd" bindtap="recordCheck" bindtouchmove="jumpToAnother">
      <button id="rec_{{item.record_index}}" wx:for="{{playback}}" wx:for-item="item" wx:key="rec_{{item.record_index}}" style="opacity:{{item.opacity}}" catchtap="recordCheck">{{index + 1}}</button>
    </view>
    <view class="photo" wx:if="{{photoDisplay}}" bindtouchstart="tapStart" bindtouchend="tapEnd" bindlongpress="photoCheck" bindtouchmove="jumpToAnother">
      <swiper>
        <swiper-item wx:for="{{img}}" wx:for-item="item" wx:key="photo_{{item.photo_index}}">
          <image id="photo_{{item.photo_index}}" mode="aspectFit" src="{{item.url}}" bindtap="photoCheck"></image>
        </swiper-item>
      </swiper>
    </view>
  </scroll-view>

   <view class="creatingZone common">
     <button class="createNote" bindtap="createNote">
      <text>{{createNote}}</text>
     </button> 
  </view> 

</scroll-view>

<scroll-view id="videoFn" wx:if="{{videoDisplay}}">
  <video src="{{videoSrc}}" bindlongpress="videoCheck" bindtouchend="tapEnd" bindtouchmove="jumpToAnother"></video>
</scroll-view>