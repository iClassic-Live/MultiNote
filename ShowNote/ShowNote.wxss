page {
  height: 100%;
  background-color: #708090;
}

#background {
  position: absolute;
  height: 93%;
  width: 100%;
  z-index: -1;
}
#background swiper {
  height: 100%;
  width: 100%;
}
#background swiper-item {
  height: 100%;
  width: 100%;
}
#background image {
  height: 100%;
  width: 100%;
}

#mainFn {
  height: 100%;
  width: 100%;
}

.upperMask {
  position: absolute;
  width: 100%;
  z-index: 999;
}
.bottomMask {
  position: absolute;
  width: 100%;
  bottom: 0;
  z-index: 999;  
}

.searchZone {
  position: relative;
  bottom: 7%;
  height: 100%;
  width: 100%;
}
.searchZone .search {
  position: relative;
  top: 7%;
  height: 7%;
  width: 100%;
  box-sizing: border-box;
  padding: 0 1%;
  border: 6rpx solid #cc0000;
  border-radius: 20rpx;
  background-color: rgba(255, 255, 255, 0.7);
}
.searchZone .search input {
  height: 100%;
  width: 100%;
}
.searchZone .result {
  height: 85%;
  width: 100%;
}
.searchZone .result .showResult {
  height: 60rpx;
  width: 100%;
  box-sizing: border-box;
  border: 6rpx solid #00f;
  border-radius: 15rpx;
  background-color: rgba(255, 255, 255, 0.6);
  margin-bottom: 3rpx;
}
.searchZone .result .showResult:hover {
  box-sizing: border-box;
  border: 6rpx solid red;
}
.searchZone .result .showResult input {
  height: 100%;
  width: 98%;
  padding: 0 1%;
}


.readingZone {
  position: relative;
  bottom: 100%;
  height: 85%;
  width: 100%;
}
.readingZone .note {
  height: 69rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  border: 4.5rpx solid #8B4513;
  border-radius: 15rpx;
  margin-top: 4.5rpx;
  background-color: rgba(255, 255, 255, 0.4);
}
.readingZone .note input {
  height: 100%;
  padding: 0 1%;
}
.readingZone .note .delete {
  position: relative;
  height: 100%;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
}
.readingZone .note .delete view {
  height: 60rpx;
  line-height: 60rpx;
  width: 80rpx;
  text-align: center;
  padding: 0 15rpx;
  background-color: red;
  color: #000;
  font-weight: bold;
  border-radius: 12.5rpx;
}
.readingZone .note .menu {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center; 
  height: 100%;
  width: 40%;
  z-index: 10;
}
.readingZone .note .menu image {
  margin: 5rpx 10rpx 0;
  height: 60rpx;
  width: 60rpx;
  line-height: 200%;
  border-radius: 0;
  font-weight: bold;
}
.readingZone .component {
  height: 100%;
  width: 100%;
}
.readingZone .text {
  height: 100%; 
  width: auto;
  box-sizing: border-box;
  border: 6rpx solid black;
  background-color: rgba(255, 255, 255, 0.4);
}
.readingZone .text textarea {
  height: 100%;
  width: 100%;
  padding: 0 1%;
}
.readingZone .record {
  height: 100%;
  width: auto;
  box-sizing: border-box;
  border: 6rpx solid black;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.4);
}
.readingZone .record button {
  height: 100rpx;
  line-height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}
.readingZone .photo {
  height: 100%;
  width: 100%;
}
.readingZone .photo swiper {
  height: 100%;
  width: 100%;
  background-color: #000;
}
.readingZone .photo swiper swiper-item {
  height: 100%;
  width: 100%;
}
.readingZone .photo swiper swiper-item image {
  height: 100%;
  width: 100%;
}

.creatingZone {
  position: relative;
  height: 8%;
  width: 100%;
  bottom: 100%;
}
.creatingZone button {
  height: 100%;
  width: 100%;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #F0F8FF;
  box-sizing: border-box;
  border: 9rpx solid #708090;
  border-radius: 0;
  font-weight: bold;
  letter-spacing: 0.5em;
}


